{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "/home/sandor/.nvm/versions/node/v11.2.0/bin/node",
            "program": "${workspaceFolder}/app/app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch test",
            "runtimeExecutable": "/home/sandor/.nvm/versions/node/v11.2.0/bin/node",
            "program": "${workspaceFolder}/test/test.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        },
    ]
}