            </div>
            
            <div class="fr-view col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                <p class="font-weight-bold"><%- articleData.teasersHtml %></p>
            </div>

            <div class="fr-view mb-2 mt-2 col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                <%- articleData.articleHtml %>
            </div>
        </div>
    </section>

    <% include ../partials/_footer.ejs %>
    <% include ../partials/_scripts.ejs %>
