    <section class="container main">
        <div class="row">
            <div class="col-12 flash messages">
                <% include ../partials/_flash-messages.ejs %>
            </div>
        </div>
        
        <div class="row">
            <div class="fr-view col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
